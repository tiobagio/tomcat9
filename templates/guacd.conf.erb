#
# guacd configuration file
#

[daemon]

pid_file = /var/run/guacd.pid
log_level = info

[server]

bind_host = localhost
bind_port = 4822

#
# The following parameters are valid only if
# guacd was built with SSL support.
#

[ssl]

server_certificate = <%= node['tomcat']['ssl_certificate'] %>    #/opt/tomcat/pgws_com.pem
server_key =<%= node['tomcat']['ssl_certificate_key'] %>         #/opt/tomcat/pgws_com.key
